<%= form_for @task do |t| %>
  <div class="form-group">
    <%= t.label :title %>
    <%= t.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= t.label :details %>
    <%= t.text_field :details, class: 'form-control' %>
  </div>
  <% unless @task.id.nil? %>
    <div class="form-group form-inline">
      <%= t.check_box :completed, class: 'form-control mr-3' %>
      <%= t.label :completed %>
    </div>
  <% end %>
  <div class="form-group">
    <%= t.submit class: 'btn btn-primary' %>
  </div>
<% end %>
